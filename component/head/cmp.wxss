/* component/head/cmp.wxss */
.container{
    position: relative;
    width: 750rpx;
    height: 875rpx;
    background-size: cover;
    background-repeat: no-repeat;
}
    .container .mask{
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: 1;
        background-image: radial-gradient(750rpx 950rpx ellipse  at 100% 0% , rgba(255,255,255,0.1) 0%, rgba(255,255,255,1) 100%);
    }

    .container .content{
        position: absolute;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        width: 100%;
        height: 100%;
        z-index: 2;
    }